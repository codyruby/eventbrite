<% @events.each do |event|%>
    <div class="col-md-4 col-sm-6 portfolio-item">
        <div class="img-fluid">
            <%if event.avatar.attached?%>
                <%= image_tag event.avatar.variant(resize: "350x350"), alt: 'avatar' %>
            <%end%>
        </div>
        <div class="portfolio-caption">
            <h4><%= event.title %></h4>
            <!-- Liens vers les différentes pages qui dépendent de l'event -->
            <%= link_to "Go to this Event", event_path(event.id), :class => "btn btn-primary btn-xl text-uppercase js-scroll-trigger"%>
        </div>
    </div>
<% end %>