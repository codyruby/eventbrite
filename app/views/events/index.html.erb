<!-- Vue de la page d'accueil de l'appication -->
<h1>HI <%= params[:id] %> ! WELCOME TO EVENTBRITE :</h1>

<!-- Boucle qui parcours tous les gossips -->
<% @events.each do |event|%>
<!-- Affichage des information de chaques gossips -->
    <div class="card text-center">
        <div class="card-body">
            <h5 class="card-title"><%= event.title %></h5>

<!-- Liens vers les différentes pages qui dépendent du gossip -->
            <%= link_to "Go to this Event", event_path(event.id), :class => "btn btn-primary"%>

        </div>
    </div>
<% end %>

